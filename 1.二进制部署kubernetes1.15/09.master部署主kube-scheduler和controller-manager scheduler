主机IP 10.204.51.64
说明#####
10.204.51.70 为master ip 可以先将这个ip配置到master节点 后续做k8s master高可用

1.scheduler
cat /app/kubernetes/config/scheduler
KUBE_SCHEDULER_ARGS=" --master=10.204.51.70:6443 --leader-elect=true --address=127.0.0.1 --logtostderr=false --v=2 --log-dir=/app/kubernetes/logs --kubeconfig=/app/kubernetes/ssl/kube-scheduler.kubeconfig"

cat /usr/lib/systemd/system/kube-scheduler.service
[Unit]
Description=Kubernetes Scheduler Plugin
Documentation=https://github.com/GoogleCloudPlatform/kubernetes

[Service]
EnvironmentFile=-/app/kubernetes/config/scheduler
ExecStart=/app/kubernetes/bin/kube-scheduler $KUBE_SCHEDULER_ARGS $CONFIGHPA
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target


systemctl  start kube-scheduler && systemctl  enable kube-scheduler


2.controller-manager
cat /app/kubernetes/config/controller-manager
CONTROL="--address=127.0.0.1 --service-cluster-ip-range=172.17.0.0/16 --cluster-name=kubernetes --cluster-signing-cert-file=/app/kubernetes/ssl/ca.pem --cluster-signing-key-file=/app/kubernetes/ssl/ca-key.pem --service-account-private-key-file=/app/kubernetes/ssl/ca-key.pem --root-ca-file=/app/kubernetes/ssl/ca.pem --leader-elect=true --master=http://10.204.51.70:6443 --logtostderr=false --v=2 --pod-eviction-timeout=180s --log-dir=/app/kubernetes/logs --experimental-cluster-signing-duration=876000h --kubeconfig=/app/kubernetes/ssl/kube-controller-manager.kubeconfig "

cat /usr/lib/systemd/system/kube-controller-manager.service
[Unit]
Description=Kubernetes Controller Manager
Documentation=https://github.com/GoogleCloudPlatform/kubernetes

[Service]
EnvironmentFile=-/app/kubernetes/config/controller-manager
ExecStart=/app/kubernetes/bin/kube-controller-manager $CONTROL 
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target


systemctl  start  kube-controller-manager && systemctl  enable  kube-controller-manager


